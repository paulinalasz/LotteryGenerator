<UserControl x:Class="LotteryGenerator.Views.GeneratedNumbers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LotteryGenerator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="6" Content="Bonus!"/>

        <Label Grid.Row="1" Grid.Column="0" Content="{Binding Number1}"/>
        <Label Grid.Row="1" Grid.Column="1" Content="{Binding Number2}"/>
        <Label Grid.Row="1" Grid.Column="2" Content="{Binding Number3}"/>
        <Label Grid.Row="1" Grid.Column="3" Content="{Binding Number4}"/>
        <Label Grid.Row="1" Grid.Column="4" Content="{Binding Number5}"/>
        <Label Grid.Row="1" Grid.Column="5" Content="{Binding BonusNumber}"/>
    </Grid>
</UserControl>
